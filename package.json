{
	"name": "translation",
	"displayName": "Translation",
	"description": "英译汉翻译插件",
	"publisher": "liwenkun",
	"icon": "icon.png",
	"version": "0.0.6",
	"license": "Apache-2.0",
	"repository": {
		"url": "https://github.com/Lwenkun/Translation",
		"type": "git"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:translation.translate",
		"onCommand:translation.changeProvider"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "translation.translate",
				"title": "翻译"
			}, 
			{
				"command": "translation.changeProvider",
				"title": "更换翻译服务"
			}
		],
		"keybindings": [
			{
				"command": "translation.translate",
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t",
				"when": "editorTextFocus"
			},
			{
				"command": "translation.changeProvider",
				"key": "ctrl+shift+1",
				"mac": "cmd+shift+1",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "translation.translate",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Translation",
			"properties": {
				"translation.provider": {
					"type": "string",
					"default": "baidu",
					"enum": [
						"baidu",
						"youdao",
						"google"
					],
					"description": "翻译服务提供商"
				},
				"translation.baidu.appId": {
					"type": "string",
					"default": "",
					"description": "百度翻译应用id"
				},
				"translation.baidu.appKey": {
					"type": "string",
					"default": "",
					"description": "百度翻译应用秘钥"
				},
				"translation.youdao.appId": {
					"type": "string",
					"default": "",
					"description": "有道翻译应用id"
				},
				"translation.youdao.appKey": {
					"type": "string",
					"default": "",
					"description": "有道翻译应用秘钥"
				},
				"translation.google.apiKey": {
					"type": "string",
					"default": "",
					"description": "谷歌翻译 api 秘钥"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/uuid": "^8.3.0",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@google-cloud/translate": "^6.0.4",
		"axios": "^0.21.0",
		"js-sha256": "^0.9.0",
		"querystring": "^0.2.0",
		"ts-md5": "^1.2.7",
		"uuid": "^8.3.1"
	}
}
